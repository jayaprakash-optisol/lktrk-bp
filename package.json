{
  "name": "leaktrak-api",
  "version": "1.0.0",
  "description": "Express TypeScript backend",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint --config eslint.config.mjs .",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage ",
    "test:unit": "jest \"tests/unit/.*\\.test\\.ts$\"",
    "test:integration": "jest \"tests/integration/.*\\.test\\.ts$\"",
    "sonar": "ts-node sonar-scanner.ts",
    "migrate": "ts-node src/database/scripts/migrate.ts",
    "seed": "ts-node src/database/scripts/seed.ts",
    "generate-types": "drizzle-kit generate:pg --out src/database/models",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit migrate",
    "db:drop": "drizzle-kit drop --config=./drizzle.config.ts"
  },
  "dependencies": {
    "@types/ioredis": "^4.28.10",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "better-sqlite3": "^11.9.1",
    "drizzle-kit": "^0.30.6",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.1.9",
    "pg-mem": "^3.0.5",
    "prettier": "^3.5.3",
    "sonarqube-scanner": "^4.3.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "esbuild": "^0.25.2"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
